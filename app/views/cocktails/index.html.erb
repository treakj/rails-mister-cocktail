

<div class="container">

  <div class="title_space text-center">
    <h1>Catalog de Cocktail'</h1>
    <p>com opção vegano sem álcool</p>
  </div>
  <div class="row">
  <% @cocktails.each_with_index do |cocktail, index| %>
      <div class="col-xs-12 col-md-6 col-lg-4 col-xl-3">
        <div class="card mt-3">
          <% if cocktail.photo.attached? %>
            <%= cl_image_tag cocktail.photo.key, quality: "auto", fetch_format: :auto, crop: :fill, style: 'height:200px; width: auto;' %>
          <% end %>
          <div class="card-img-overlay">
            <div class="card-body">
              <h5 class='card-title'><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
