

<div class="container">

  <div class="title_space text-center">
    <h1>Catalog de Cocktail'</h1>
    <p>com opção vegano sem álcool</p>
  </div>
  <div class="row">
  <% @cocktails.each_with_index do |cocktail, index| %>
      <div class="col-4">
        <div class="card mt-3">
          <% if cocktail.photo.attached? %>
            <%= cl_image_tag cocktail.photo.key, height: 200, width: 300, crop: :fill %>
          <% end %>
          <div class="card-img-overlay">
            <div class="card-body">
              <h5 class='card-title'><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
