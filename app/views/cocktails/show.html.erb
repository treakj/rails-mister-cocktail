


<div class="container text-center p-5">

  <h1 class="mb-3"><%= @cocktail.name %></h1>
    <% if @cocktail.photo.attached? %>
      <%= cl_image_tag @cocktail.photo.key, style: 'height:200px; width: auto;', crop: :fill %>
    <% end %>
    
    <h5 class="mt-3">
      <%= link_to "Editar?", edit_cocktail_path %>
    </h5>
  


  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-6">
      <table class="table">
        <tbody>
          <thead>
            <th>Ingrediente</th>
            <th>Descrição</th>
            <th>Deletar</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <%= link_to "criar dose", new_cocktail_dose_path(@cocktail) %>
      </table>
    </div>

  </div>

</div>