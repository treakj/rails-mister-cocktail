


<div class="container text-center">

  <h1><%= @cocktail.name %></h1>
    <% if @cocktail.photo.attached? %>
      <%= cl_image_tag @cocktail.photo.key, height: 200, width: 300, crop: :fill %>
    <% end %>
    <%= link_to "Editar?", edit_cocktail_path %>
  </p>


  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-6">
      <h3>Recipe</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <%= link_to "criar dose", new_cocktail_dose_path(@cocktail) %>
      </table>
    </div>

  </div>

</div>